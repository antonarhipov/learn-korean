            "korean": "가",
            "romanization": "ga",
            "translation": "GA syllable",
            "audio": "/assets/audio/ga.mp3"
          },
          {
            "korean": "나",
            "romanization": "na",
            "translation": "NA syllable",
            "audio": "/assets/audio/na.mp3"
          },
          {
            "korean": "바",
            "romanization": "ba",
            "translation": "BA syllable",
            "audio": "/assets/audio/ba.mp3"
          }
        ],
        "media": {
          "image": "/assets/images/syllable-formation.jpg",
          "video": null
        }
      },
      "exercises": [
        {
          "type": "quiz",
          "title": "Syllable Reading Quiz",
          "questions": [
            {
              "question": "How do you read '가'?",
              "options": ["ga", "ka", "na", "ba"],
              "correctAnswer": "ga"
            }
          ]
        }
